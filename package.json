{
  "name": "EAuthenticator",
  "productname": "EAuthenticator",
  "version": "0.1.0",
  "description": "An Electron Desktop app compatible with Google Authenticator",
  "main": "main.js",
  "author": "Nikolasel",
  "dependencies": {
    "about-window": "^1.10.0",
    "chart.js": "^2.7.2",
    "electron": "^1.8.0",
    "js-chacha20": "^1.1.0",
    "jssha": "^2.3.1",
    "material-design-icons": "^3.0.1",
    "material-design-lite": "^1.3.0",
    "openpgp": "^2.5.10",
    "secure-random": "^1.1.1",
    "npm-license-crawler": "^0.1.7",
    "open": "^0.0.5",
    "sntp": "=2.0.1",
    "text-encoding": "^0.6.4"
  },
  "devDependencies": {
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^9.1.0",
    "electron-winstaller": "^2.6.4",
    "mocha": "^3.5.0"
  },
  "optionalDependencies": {
    "electron-installer-flatpak": "^0.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nikolasel/EAuthenticator.git"
  },
  "license": "GPL-3.0",
  "scripts": {
    "test": "mocha",
    "start": "electron .",
    "license": "npm-license-crawler --json licenses.json",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=img/icon256x256.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . EAuthenticator --overwrite --asar --platform=win32 --arch=x64 --icon=img/icon256x256.ico --prune=true --out=release-builds --version-string.CompanyName=Nikolasel --version-string.FileDescription=EAuthenticator --version-string.ProductName=\"EAuthenticator\"",
    "package-linux": "electron-packager . EAuthenticator --overwrite --platform=linux --arch=x64 --icon=img/icon300x300.png --prune=true --out=release-builds",
    "create-installer-mac": "electron-installer-dmg ./release-builds/EAuthenticator-darwin-x64/EAuthenticator.app EAuthenticator --out=release-builds --overwrite --icon=img/icon256x256.icns --background=img/background-mac-installer.png",
    "create-installer-win": "node installers/windows/createinstaller.js",
    "create-installer-linux": "electron-installer-flatpak --src release-builds/EAuthenticator-linux-x64/ --dest release-builds/installers/ --arch x64 --icon=img/icon300x300.png"
  }
}
